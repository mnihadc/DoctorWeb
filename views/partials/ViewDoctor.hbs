<div class="headofdoctor">
    <h1>{{this.title}}</h1>
    <div class="doctorpagehead">
        <div class="container">
            {{#each doctorData}}
            <div class="doctor-box">
                <img src="{{this.image}}" alt="{{this.name}}">
                <h2 class="doctor-name">{{this.name}}</h2>
                <p class="duty-time">Duty Time: {{this.dutyTime}}</p>
                <p class="specialization">Specialization: {{this.specialization}}</p>
                <p class="bio">{{this.bio}}</p>
                <p class="contact">
                    Contact: {{this.contact.phone}} | {{this.contact.email}}
                </p>

                <!-- Individual booking form for each doctor -->
                <form action="/booking" method="POST">
                    <input type="hidden" name="doctorId" value="{{this._id}}">
                    <label for="appointmentTime">Select Appointment Time:</label>
                    <input type="datetime-local" name="appointmentTime" required>
                    <button type="submit" class="book-button">Book Your Token</button>
                </form>
            </div>
            {{/each}}
        </div>
    </div>
</div>